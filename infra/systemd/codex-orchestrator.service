[Unit]
Description=Codex Home Orchestrator
After=network-online.target docker.service
Wants=network-online.target

[Service]
Type=simple
User=agent
WorkingDirectory=/opt/codex-home
EnvironmentFile=/opt/codex-home/.env
ExecStart=/usr/bin/docker compose up orchestrator
ExecStop=/usr/bin/docker compose stop orchestrator
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
